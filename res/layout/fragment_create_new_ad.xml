
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_marginLeft="15dp"
     android:layout_marginTop="5dp"
    
     >
<GridLayout 
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:columnCount="2"
    android:rowCount="7"
    android:orientation="horizontal"
    tools:context=".GridXMLActivity" 
    android:scrollbars="vertical"
    android:layout_marginRight="15dp"
    >
    
    
   <TextView 
      android:id="@+id/txtAdName"
      android:text="Name"
      android:layout_gravity="left|bottom"
      android:textSize="17dp"
      android:textStyle="bold"
      android:layout_marginBottom="10dp"
      
      />
   
   <EditText 
       android:id="@+id/inputAdName"
       android:layout_gravity="left|top"
       android:inputType="text"
       android:layout_width="match_parent"
        android:background="@color/light_gray"
       android:textSize="20dp"
       android:layout_marginBottom="10dp"
       />
   
  
   
     <TextView 
      android:id="@+id/txtLocation"
      android:text="Location"
      android:layout_gravity="left|bottom"
      android:textSize="17dp"
      android:textStyle="bold"
      android:layout_marginBottom="10dp"
      />
   
   <EditText 
       android:id="@+id/inputLocation"
       android:layout_gravity="left|top"
       android:inputType="text"
       android:layout_width="match_parent"
        android:background="@color/light_gray"
       android:textSize="20dp"
       android:layout_marginBottom="10dp"
       
       
       />
   
   <TextView 
      android:id="@+id/txtDateFrom"
      android:text="Date from"
      android:layout_gravity="left|bottom"
      android:textSize="17dp"
      android:textStyle="bold"
      android:layout_marginBottom="10dp"
      />
   
   <EditText 
       android:id="@+id/inputDateFrom"
       android:layout_gravity="left|top"
       android:inputType="text"
       android:layout_width="match_parent"
       android:focusable="false"
        android:background="@color/light_gray"
       android:textSize="20dp"
       android:layout_marginBottom="10dp"
       
       />
   
    <TextView 
      android:id="@+id/txtDateTo"
      android:text="Date to"
      android:layout_gravity="left|bottom"
      android:textSize="17dp"
      android:textStyle="bold"
      android:layout_marginBottom="10dp"
      />
   
   <EditText 
       android:id="@+id/inputDateTo"
       android:layout_gravity="left|top"
       android:inputType="text"
       android:layout_width="match_parent"
       android:focusable="false"
        android:background="@color/light_gray"
       android:textSize="20dp"
       android:layout_marginBottom="10dp"
       />
   
    <TextView 
      android:id="@+id/txtAdDescription"
      android:text="Description"
      android:layout_gravity="left|top"
      android:layout_marginTop="15dp"
      android:textSize="17dp"
      android:textStyle="bold"
      android:layout_marginBottom="10dp"
      />
   
   <EditText
       android:id="@+id/inputAdDescription"
       android:layout_width="wrap_content"
       android:layout_gravity="fill_horizontal|bottom"
       android:layout_marginRight="5dp"
       android:gravity="top|left"
       android:inputType="textMultiLine"
       android:lines="5"
       android:scrollbars="vertical"
       android:singleLine="false"
        android:background="@color/light_gray"
       android:textSize="20dp" 
       android:layout_marginBottom="10dp"/>
   
   <TextView
       android:id="@+id/txtErrorA"
       android:layout_width="match_parent"
       android:layout_columnSpan="2"
       android:layout_gravity="fill_horizontal|bottom"
        />
   
     <Button
        android:id="@+id/btnCreateAd"
        android:layout_gravity="left"
        android:layout_columnSpan="2"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:text="Create" 
        android:onClick="register"
        android:background="@color/list_background_pressed"
        android:textColor="@color/white_color"
        />
     
     
</GridLayout>
</ScrollView>
 