<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3"
    android:orientation="horizontal"
    tools:context=".GridXMLActivity"
    android:layout_margin="15dp"
   
     >
 
    <TextView 
      android:id="@+id/txtUserFullName"
      android:text="Full Name"
      android:layout_gravity="left|bottom"
      android:layout_columnSpan="2"
      android:textSize="20dp"
      android:textStyle="bold"
      />
    
    <TextView 
      android:id="@+id/txtUserSelfDescription"
      android:text="Self description"
      android:layout_gravity="left|top"
      android:layout_columnSpan="2"
      android:lines="4"
      android:textSize="17dp"
      android:background="@color/light_gray"
      android:layout_width="fill_parent"
      android:layout_marginBottom="10dp"
      
        />

    <Button
        android:id="@+id/btnViewUserCV"
        android:layout_gravity="right"
        android:text="View CV"
        android:layout_column="0"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@color/list_background"
        android:textColor="@color/white_color"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
      
      />
    
    <Button
        android:id="@+id/btnCallUser"
        android:layout_gravity="center_horizontal"
        android:text="Call"
        android:layout_width="120dp"
        android:background="@color/list_background_pressed"
        android:textColor="@color/white_color"
        android:layout_marginRight="20dp"
        android:layout_height="35dp"
      
      />
    
</GridLayout>
